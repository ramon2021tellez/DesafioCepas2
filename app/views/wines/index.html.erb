<p id="notice"><%= notice %></p>
<%= render 'layouts/login' %>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Strains</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.id %></td>
        <td><%= wine.name %></td>
        <td><%= sort_strains wine.wine_strains %></td>
        <td><%= sort_enologist wine.enologist_wines %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Score', new_enologist_wine_path %>                    
        
        <% if current_user.admin?  %>
          <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
          <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin?  %>
  <%= link_to 'New Wine', new_wine_path %>
  <%= link_to 'Enologists', enologists_path %>
<% end %>
<%= link_to 'Strains', strains_path %>


